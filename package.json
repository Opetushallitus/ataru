{
  "name": "lomake-editori",
  "repository": {
    "type": "git",
    "url": "https://github.com/Opetushallitus/lomake-editori.git"
  },
  "license": "EUPL-1.1",
  "scripts": {
    "lint:clj": "clj-kondo --config .clj-kondo.config.edn --lint src",
    "lint:clj:lint-staged": "clj-kondo --config .clj-kondo.config.edn --lint",
    "lint:js": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "npm run lint:js"
    ],
    "**/*.{clj,cljs,cljc}": [
      "npm run lint:clj:lint-staged"
    ]
  },
  "devDependencies": {
    "chai": "4.2.0",
    "clj-kondo": "2020.1.13",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "karma": "5.0.1",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-cljs-test": "0.1.0",
    "karma-mocha": "2.0.0",
    "lint-staged": "10.1.3",
    "mocha": "7.1.1",
    "pm2": "4.2.3",
    "prettier": "2.0.4",
    "puppeteer": "2.1.1"
  }
}
