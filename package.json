{
  "name": "lomake-editori",
  "repository": {
    "type": "git",
    "url": "https://github.com/Opetushallitus/lomake-editori.git"
  },
  "license": "EUPL-1.1",
  "scripts": {
    "cypress:open": "cypress open -C oph-configuration/cypress.json",
    "cypress:run": "cypress run -C oph-configuration/cypress.json --browser chrome --headless",
    "cypress:run:ci": "cypress run -C oph-configuration/cypress.ci.json --browser /home/runner/.cache/ms-playwright/chromium-1097/chrome-linux/chrome --headless",
    "lint:clj": "clj-kondo --lint src",
    "lint:clj:lint-staged": "clj-kondo --lint",
    "lint:js": "eslint '**/*.{ts,js}'",
    "lint:js:lint-staged": "eslint",
    "lint:js:fix": "eslint --fix '**/*.{ts,js}'",
    "tsc:type-check": "./bin/type-check.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "cypress/**/*.ts": [
      "npm run tsc:type-check"
    ],
    "**/*.{js,ts}": [
      "npm run lint:js:lint-staged"
    ],
    "!(.clj-kondo/**/*)*.{clj,cljs,cljc}": [
      "npm run lint:clj:lint-staged"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^18.19.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "chai": "4.2.0",
    "child-process": "^1.0.2",
    "clj-kondo": "^2023.7.13",
    "cypress": "4.11.0",
    "eslint": "8.56.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-chai-friendly": "0.7.2",
    "eslint-plugin-cypress": "2.15.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "5.1.2",
    "fp-ts": "2.6.3",
    "http-server": "^0.12.3",
    "husky": "4.2.5",
    "karma": "5.1.0",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-cljs-test": "0.1.0",
    "karma-mocha": "2.0.1",
    "less": "^4.2.0",
    "less-watch-compiler": "^1.16.3",
    "lint-staged": "10.2.9",
    "mocha": "8.0.1",
    "pm2": "4.4.0",
    "prettier": "3.1.1",
    "puppeteer": "3.3.0",
    "typescript": "^5.3.3"
  }
}
